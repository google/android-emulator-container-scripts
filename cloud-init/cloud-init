## template: jinja
#cloud-config

# Make sure we have a kvm group.
groups:
  - kvm

users:
- name: aemu
  uid: 2000
  groups: kvm

write_files:
- path: /etc/udev/rules.d/kvm-permissions
  permissions: 0644
  owner: root
  content: |
    KERNEL=="kvm", GROUP="kvm", MODE="0660"

- path: /run/metadata/aemu
  permissions: 0644
  owner: root
  content: |
    INSTANCE_COUNT=1
    GRPC_PORT=8554
    ADB_PORT=5555
    # Replace with your own turn command (Be careful of escaping ")
    TURN=
    # Additional emulator parameters
    EMULATOR_PARAMS=
    # Additional avd config
    AVD_CONFIG=
    # Replace with your own accessible image.
    IMAGE=us-docker.pkg.dev/android-emulator-268719/images/30-google-x64:latest
